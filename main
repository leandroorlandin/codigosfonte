import java.io.FileReader;
import java.io.IOException;
import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;

public class JsonDataLoader {

   private String name;
   private int age;
   private String city;

   public JsonDataLoader(String filePath) throws IOException, ParseException {
      JSONParser parser = new JSONParser();
      Object obj = parser.parse(new FileReader(filePath));
      JSONObject jsonObject = (JSONObject) obj;
      this.name = (String) jsonObject.get("name");
      this.age = (int) (long) jsonObject.get("age"); // o cast é necessário, pois o get retorna um Long
      this.city = (String) jsonObject.get("city");
   }

   public String getName() {
      return name;
   }

   public int getAge() {
      return age;
   }

   public String getCity() {
      return city;
   }

   public static void main(String[] args) {
      try {
         JsonDataLoader loader = new JsonDataLoader("data.json");
         System.out.println("Name: " + loader.getName());
         System.out.println("Age: " + loader.getAge());
         System.out.println("City: " + loader.getCity());
      } catch (IOException | ParseException e) {
         e.printStackTrace();
      }
   }
}
